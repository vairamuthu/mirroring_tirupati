.row
  .col-xs-6.col-sm-4.col-md-3.col-lg-2.col-lg-offset-8
    = link_to new_admin_city_url, class: "btn btn-default btn-primary" do
      %span.glyphicon.glyphicon-plus
      = t('.new_city')
.row
  .col-sm-5.col-sm-offset-2.col-md-6.col-md-offset-2
    %table{class: 'table table-striped table-hover'}
      %thead
        %tr
          %th= t('.header.name')
          %th= t('country')
          %th= t('.header.short_name')
          %th= t('.header.code')
          %th &nbsp;
      //%tbody
      - collection.each do |r|
        %tr
          %td= r.name
          %td= r.country.name
          %td= r.short_name
          %td= r.code
          %td
            = link_to edit_admin_city_url(r), class: "btn  btn-link" do
              = t('.edit')
